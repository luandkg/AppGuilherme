<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.AtividadesActivity">

    <TextView
        android:id="@+id/ATIVIDADES_TITULO"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="TURMA"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/ATIVIDADES_CRIAR_ATIVIDADE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#FDD835"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="CRIAR ATIVIDADE" />

    <ListView
        android:id="@+id/ATIVIDADES_LISTAGEM"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="600dp" />

    <Button
        android:id="@+id/ATIVIDADES_VER_NOTAS"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#4CAF50"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="VER NOTAS" />

</LinearLayout>