<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.QuadroDeNotasActivity">

    <TextView
        android:id="@+id/QUADRO_DE_NOTAS_TITULO"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="TURMA"
        android:textAlignment="center"
        android:textSize="30dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/QUADRO_DE_NOTAS_TEXTO_IL"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Nota de atividades">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/QUADRO_DE_NOTAS_TEXTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/QUADRO_DE_NOTAS_ALTERAR"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"

        android:backgroundTint="#4CAF50"
        android:text="ALTERAR"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/QUADRO_DE_NOTAS_LISTAGEM"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="600dp" />

</LinearLayout>