<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MomentoDeAvaliacao">

    <TextView
        android:id="@+id/momento_avaliacao_titulo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:text="."
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/momento_avaliacao_grafico"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <LinearLayout
        android:id="@+id/momento_avaliacao_contadores"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/momento_avaliacao_alfa"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="#4CAF50"
            android:textAlignment="center"
            android:text="0"
            android:textSize="32dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/momento_avaliacao_lista"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="5dp"
        android:orientation="vertical" />

</LinearLayout>