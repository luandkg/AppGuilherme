<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Avaliacao">

    <TextView
        android:id="@+id/AVALIACAO_TITULO"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:text="TURMA"
        android:textAlignment="center"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AVALIACAO_NOME"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:text="AVALIACAO"
            android:textAlignment="center"
            android:textSize="18dp" />

        <Button
            android:id="@+id/AVALIACAO_RENOMEAR"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="#FFC107"
            android:text=""
            android:textSize="15dp" />

    </LinearLayout>


    <com.luandkg.guilherme.widgets.CaixaDeAtividade
        android:id="@+id/AVALIACAO_CAIXA"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp" />

    <ListView
        android:id="@+id/AVALIACAO_LISTAGEM"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/AVALIACAO_SALVAR"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#4CAF50"
            android:text="SALVAR"
            android:textSize="20dp" />

        <Button
            android:id="@+id/AVALIACAO_EXCLUIR"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#E53935"
            android:text="EXCLUIR"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>