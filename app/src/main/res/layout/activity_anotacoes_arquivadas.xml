<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.AnotacoesArquivadasActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="ANOTAÇÕES ARQUIVADAS"
        android:textSize="30dp" />

    <ListView
        android:id="@+id/anotacoes_arquivadas_listagem"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_margin="5dp"
        android:orientation="vertical" />

    <Button
        android:id="@+id/anotacoes_arquivadas_removertodos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:backgroundTint="#e53935"
        android:text="Remover Todos !" />

</LinearLayout>